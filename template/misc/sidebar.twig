<nav id="js-primary-nav" class="primary-nav" role="navigation">
<div class="nav-filter">
    <div class="position-relative">
        <input type="text" id="nav_filter_input" placeholder="Filter menu" class="form-control" tabindex="0">
        <a href="#" onclick="return false;" class="btn-primary btn-search-close js-waves-off" data-action="toggle" data-class="list-filter-active" data-target=".page-sidebar">
            <i class="fal fa-chevron-up"></i>
        </a>
    </div>
</div>
<div class="info-card">
    <img src="{{constant('ROOT')}}assets/img/avatar/user_50x50.png" class="profile-image rounded-circle" alt="{{session.usuario.nombre}}">
    <div class="info-card-text">
        <a href="#" class="d-flex align-items-center text-white">
            <span class="text-truncate text-truncate-sm d-inline-block">
                {{session.usuario.nombre}}
            </span>
        </a>
        <span class="d-inline-block text-truncate text-truncate-sm">{{session.usuario.email}}</span>
    </div>
    <img src="{{constant('ROOT')}}assets/img/card-backgrounds/cover-4-lg.png" class="cover" alt="cover">
    <a href="#" onclick="return false;" class="pull-trigger-btn" data-action="toggle" data-class="list-filter-active" data-target=".page-sidebar" data-focus="nav_filter_input">
        <i class="fal fa-angle-down"></i>
    </a>
</div>

<ul class="nav-menu" id="js-nav-menu">
    
    {% for section in constant('MENU_SIDEBAR') %}
        {% if section.title != '' %}
            <li class="nav-title">{{section.title}}</li>
        {% endif %}
        
        {% for item in section.nav_key %}

            {% if item.display %}

                <li>
                    <a href="{{item.href}}" title="{{item.title}}" class=" " data-filter-tags="{{item.filter_tags}}">
                        <i class="fal fa-{{item.icon}}"></i>
                        <span class="nav-link-text" data-i18n="nav.{{item.label|lower|replace(' ','_')}}">{{item.label}}</span>
                        {% if item.ext %}
                        {{item.ext|replace({'%s':session.usuario.recibos})|raw}}
                        {% endif %}
                        
                    </a>
                </li>

            {% endif %}

        {% endfor %}
        
    {% endfor %}
</ul>
<div class="filter-message js-filter-message bg-success-600"></div>
</nav>